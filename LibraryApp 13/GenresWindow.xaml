<Window x:Class="LibraryApp13.GenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Список жанров" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" x:Name="GenresGrid" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="400"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Click="AddGenre_Click" Width="100" Height="30" Margin="5"/>
            <Button Content="Редактировать" Click="EditGenre_Click" Width="100" Height="30" Margin="5"/>
            <Button Content="Удалить" Click="DeleteGenre_Click" Width="100" Height="30" Margin="5"/>
            <Button Content="Закрыть" Click="Close_Click" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>